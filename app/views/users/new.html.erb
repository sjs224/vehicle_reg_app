<% provide(:title, 'Register') %>
<h1>Register</h1>
<p NOTE : Email and password are required fields /p>

<div class="row">
	<div class="span6 offset3">
	  <%= form_for(@user) do |f| %>
	 	<%= render 'shared/error_messages' %>
		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :street %>
		<%= f.text_field :street %>

		<%= f.label :city %>
		<%= f.text_field :city %>

		<%= f.label :province %>
		<%= f.text_field :province %>

		<%= f.label :postcode %>
		<%= f.text_field :postcode %>

		<%= f.label :phone %>
		<%= f.text_field :phone %>

		<%= f.submit "register", class: "btn btn-large btn-primary" %>
	<% end %>
  </div>
</div>